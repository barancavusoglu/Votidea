<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:clickable="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <ImageView
                    android:id="@+id/ivProfileBlur"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="w,3:4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivBlackened"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:alpha="0.7"
                    android:src="@android:color/black"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/ivProfileBlur"
                    app:layout_constraintEnd_toEndOf="@+id/ivProfileBlur"
                    app:layout_constraintStart_toStartOf="@+id/ivProfileBlur"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileBlur" />

                <TextView
                    android:id="@+id/tvNameSurname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:fontFamily="@font/roboto_bold"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivProfile" />

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="@dimen/margin_8"
                    app:layout_constraintBottom_toBottomOf="@+id/ivProfileBlur"
                    app:layout_constraintEnd_toEndOf="@+id/ivProfileBlur"
                    app:layout_constraintStart_toStartOf="@+id/ivProfileBlur"
                    app:layout_constraintTop_toTopOf="@+id/ivProfileBlur"
                    app:layout_constraintVertical_bias="0.1" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="387dp"
                    android:layout_height="16dp"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameSurname" />

                <TextView
                    android:id="@+id/tvVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:fontFamily="@font/roboto"
                    android:text="@string/vote"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvVoted"
                    app:layout_constraintEnd_toStartOf="@+id/ivProfile"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvVoted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:fontFamily="@font/roboto"
                    android:text="@string/voted"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBlackened"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:fontFamily="@font/roboto"
                    android:text="@string/comment"
                    android:textColor="@color/black"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvVoted"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivProfile" />

                <TextView
                    android:id="@+id/tvVoteCount"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toTopOf="@+id/tvVote"
                    app:layout_constraintEnd_toEndOf="@+id/tvVote"
                    app:layout_constraintStart_toStartOf="@+id/tvVote" />

                <TextView
                    android:id="@+id/tvVotedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toTopOf="@+id/tvVoted"
                    app:layout_constraintEnd_toEndOf="@+id/tvVoted"
                    app:layout_constraintHorizontal_bias="0.468"
                    app:layout_constraintStart_toStartOf="@+id/tvVoted" />

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toTopOf="@+id/tvComment"
                    app:layout_constraintEnd_toEndOf="@+id/tvComment"
                    app:layout_constraintStart_toStartOf="@+id/tvComment" />

                <ImageView
                    android:id="@+id/ivGreyCircleOptions"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:alpha="0.5"
                    android:src="@drawable/grey_circle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fancy:srcCompat="@drawable/ic_more_vert_white_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivGreyCircleOptions"
                    app:layout_constraintEnd_toEndOf="@+id/ivGreyCircleOptions"
                    app:layout_constraintStart_toStartOf="@+id/ivGreyCircleOptions"
                    app:layout_constraintTop_toTopOf="@+id/ivGreyCircleOptions" />

                <ImageView
                    android:id="@+id/ivCountry"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/margin_4"
                    android:layout_marginTop="@dimen/margin_4"
                    app:layout_constraintStart_toStartOf="@+id/ivProfile"
                    app:layout_constraintTop_toTopOf="@+id/ivProfile" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btFollow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivBlackened"
                    fancy:fb_defaultColor="@color/colorPrimary"
                    fancy:fb_focusColor="#ffffff"
                    fancy:fb_fontIconResource="&#xf234;"
                    fancy:fb_fontIconSize="15dp"
                    fancy:fb_iconPosition="left"
                    fancy:fb_text="@string/follow"
                    fancy:fb_textColor="#FFFFFF" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btFollowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btFollow"
                    fancy:fb_defaultColor="@color/light_grey"
                    fancy:fb_focusColor="#344e00"
                    fancy:fb_fontIconSize="15dp"
                    fancy:fb_iconPosition="left"
                    fancy:fb_text="@string/followingAlready"
                    fancy:fb_textColor="#FFFFFF" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/followerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                    app:layout_constraintEnd_toStartOf="@+id/ivProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/followingLayout">>

                    <TextView
                        android:id="@+id/tvFollowerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@+id/tvFollower"
                        app:layout_constraintEnd_toEndOf="@+id/tvFollower"
                        app:layout_constraintStart_toStartOf="@+id/tvFollower" />

                    <TextView
                        android:id="@+id/tvFollower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:fontFamily="@font/roboto"
                        android:text="@string/followers"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/followingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_8"
                    app:layout_constraintBottom_toTopOf="@id/followerLayout"
                    app:layout_constraintEnd_toStartOf="@+id/ivProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivProfile">

                    <TextView
                        android:id="@+id/tvFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:fontFamily="@font/roboto"
                        android:text="@string/following"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/tvFollowingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toTopOf="@+id/tvFollowing"
                        app:layout_constraintEnd_toEndOf="@+id/tvFollowing"
                        app:layout_constraintStart_toStartOf="@+id/tvFollowing" />
                </android.support.constraint.ConstraintLayout>

                <ImageView
                    android:id="@+id/ivSendMessage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:background="@drawable/grey_circle_trans"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivProfile"
                    app:layout_constraintTop_toTopOf="@+id/ivProfile"
                    fancy:srcCompat="@drawable/ic_send_message" />

                <TextView
                    android:id="@+id/tvSendMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:fontFamily="@font/roboto"
                    android:text="Mesaj Gönder"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="@+id/ivSendMessage"
                    app:layout_constraintStart_toStartOf="@+id/ivSendMessage"
                    app:layout_constraintTop_toBottomOf="@+id/ivSendMessage" />

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        app:layout_anchorGravity="bottom|center"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior" />
</android.support.design.widget.CoordinatorLayout>